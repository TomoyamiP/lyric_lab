<!DOCTYPE html>
<html>
  <head>
    <title>LyricLab</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Raleway:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
    <%= render "shared/meta", song: @song if controller_name == "songs" && action_name == "show" && @song.present? %>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#010038">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">
  </head>
  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
    <%= render "shared/bottom_nav" %>
    <script>
      document.addEventListener("click", function (e) {

        const btn = e.target.closest(".js-delete");
        if (!btn) return;

        e.preventDefault();

        const url = btn.dataset.url;
        const csrf = document.querySelector('meta[name="csrf-token"]').content;

        const runDelete = () => fetch(url, { method: "DELETE", headers: { "X-CSRF-Token": csrf } })
                                  .then(() => window.location.reload());

        if (typeof Swal === "undefined") {
          runDelete();
          return;
        }

        Swal.fire({
          title: "Are you sure?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#3085d6",
          confirmButtonText: "Yes!"
        }).then((result) => {
          if (result.isConfirmed) runDelete();
        });
      });
    </script>
    <div class="content-page">
      <%= yield %>
    </div>
  </body>
</html>
