<%= simple_form_for([song, message], html: { class: "w-100", id: "new_message" }) do |f| %>
  <div class="d-flex w-100 gap-2">
    <%= f.input :content,
          label: false,
          wrapper_html: { class: "flex-grow-1 mb-0" },
          input_html:  { class: "form-control", placeholder: "Ask me something..." } %>
    <%= f.button :submit, "Ask", class: "btn btn-primary" %>
  </div>
<% end %>
