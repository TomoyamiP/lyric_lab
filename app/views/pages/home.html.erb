<!-- Hero Section -->
<div class="landing-hero text-center text-white pt-0">
  <h1 class="display-4 title-landing-banner">LyricLab: AI-Powered Songwriting, Made Simple</h1>
  <p class="lead mt-3">
    <span class="lyribot"></span> Meet <strong>LyriBot</strong>, your AI-powered songwriting partner.<br>
    Choose a style, set the mood, and add your keywords—LyriBot transforms your ideas into unique, expressive lyrics in seconds.<br>
    Whether you're writing for fun, practice, or your next hit song, LyriBot helps you turn inspiration into words.
  </p>
  <%= link_to "Join Now", new_user_registration_path, class: "btn btn-flat btn-lg mt-4" %>
</div>
<!-- How It Works Section -->
<div class="container py-5">
  <h2 class="text-center mb-4">How It Works</h2>
  <div class="row text-center">
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-music fa-2x mb-2"></i>
        <h5>Choose a Style</h5>
        <p>Pick Pop, Rock, R&B, Hip-hop, or any genre.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-smile fa-2x mb-2"></i>
        <h5>Set a Mood</h5>
        <p>Happy, sad, or energetic — it's up to you.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-keyboard fa-2x mb-2"></i>
        <h5>Add Keywords</h5>
        <p>Include words or themes you want in your lyrics.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3 text-center">
        <div class="lyribot mb-2"></div>
        <!-- replaced the <i> icon -->
        <h5>Generate Lyrics</h5>
        <p>Our AI creates your custom song lyrics instantly.</p>
      </div>
    </div>
  </div>
</div>
<!-- Example Lyrics Section -->
<div class="landing-example text-center py-5">
  <h2 class="mb-3">Example Lyrics</h2>
  <blockquote class="blockquote text-white">
    <p class="mb-0">"Dancing through the neon lights, your heart beats in time…"</p>
    <footer class="blockquote-footer mt-3" style="color: #EEEEEE;">Generated by LyriBot</footer>
  </blockquote>
</div>
