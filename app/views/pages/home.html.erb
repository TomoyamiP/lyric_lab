<!-- Hero Section -->
<div class="landing-hero text-center text-white py-5">
  <h1 class="display-4 title-banner">LyricLab</h1>
  <p class="lead">Create your own lyrics with AI based on style, mood, and keywords</p>
  <%= link_to "Join Now", new_user_registration_path, class: "btn btn-primary btn-lg mt-3" %>
</div>
<!-- How It Works Section -->
<div class="container py-5">
  <h2 class="text-center mb-4">How It Works</h2>
  <div class="row text-center">
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-music fa-2x mb-2"></i>
        <h5>Choose a Style</h5>
        <p>Pick Pop, Rock, Jazz, or any genre.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-smile fa-2x mb-2"></i>
        <h5>Set a Mood</h5>
        <p>Happy, sad, or energetic — it’s up to you.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-keyboard fa-2x mb-2"></i>
        <h5>Add Keywords</h5>
        <p>Include words or themes you want in your lyrics.</p>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-dark text-white p-3">
        <i class="fas fa-robot fa-2x mb-2"></i>
        <h5>Generate Lyrics</h5>
        <p>Our AI creates your custom song lyrics instantly.</p>
      </div>
    </div>
  </div>
</div>
<!-- Example Lyrics Section -->
<div class="landing-example text-center py-5">
  <h2 class="mb-3">Example Lyrics</h2>
  <blockquote class="blockquote text-white">
    <p class="mb-0">"Dancing through the neon lights, your heart beats in time…"</p>
    <footer class="blockquote-footer mt-3" style="color: #EEEEEE;">Generated by LyriBot</footer>
  </blockquote>
</div>
