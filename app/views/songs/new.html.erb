<div class="container mt-5 d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="text-center mb-4 title-banner"><strong>AI Song Generator</strong></h1>
    <%= simple_form_for @song do |f| %>
      <div class="form-group mb-3">
        <%= f.label :mood, "Mood" %>
        <%= f.input :mood,
              as: :text,
              label: false,
              input_html: {
                placeholder: "What mood should the song express?",
                rows: 3,
                class: "form-control"
              } %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :genre, "Genre" %>
        <%= f.input :genre,
              as: :select,
              collection: User::MUSIC_STYLES,
              prompt: "What genre should the song be?",
              include_blank: false,
              label: false %>
      </div>
      <div class="form-group mb-4">
        <%= f.label :keywords, "Keywords" %>
        <%= f.input :keywords,
              as: :text,
              label: false,
              input_html: {
                placeholder: "Add your keywords here",
                rows: 3,
                class: "form-control"
              } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create", class: "btn btn-flat w-100" %>
      </div>
    <% end %>
  </div>
</div>
