<div class="neo-hero">
  <div class="grain"></div>
  <div class="grid"></div>
  <div class="container d-flex justify-content-center pb-5">
    <div class="col-md-8 col-lg-6">
      <h1 class="text-center mb-4 title-banner"><strong>Turn Your Feelings into Music</strong></h1>
      <div class="glass p-4 rounded">
        <%= simple_form_for @song do |f| %>
          <!-- Mood -->
          <div class="form-group mb-3">
            <%= f.label :mood, "Mood", class: "form-label fw-bold" %>
            <%= f.input :mood,
                  as: :text,
                  label: false,
                  input_html: {
                    placeholder: "What mood should the song express?",
                    rows: 3,
                    class: "form-control"
                  } %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :genre, "Genre", class: "form-label fw-bold" %>
            <%= f.input :genre,
                  as: :select,
                  collection: User::MUSIC_STYLES,
                  include_blank: "Select a genre",
                  label: false,
                  input_html: { class: "form-select" } %>
          </div>
          <!-- Keywords -->
          <div class="form-group mb-4">
            <%= f.label :keywords, "Keywords", class: "form-label fw-bold" %>
            <%= f.input :keywords,
                  as: :text,
                  label: false,
                  input_html: {
                    placeholder: "Add your keywords here",
                    rows: 3,
                    class: "form-control"
                  } %>
          </div>
          <!-- Photo upload -->
          <div class="form-group mb-4">
            <%= f.label :photo, "Upload a photo", class: "form-label fw-bold" %>
            <%= f.input :photo,
                  as: :file,
                  label: false,
                  input_html: { class: "form-control" } %>
          </div>
          <!-- Submit -->
          <div class="form-actions">
            <%= f.button :submit, "Create", class: "btn btn-flat w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
