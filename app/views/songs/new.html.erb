<h1><strong>AI Song Generator</strong></h1>

<div class="container">
  <%= simple_form_for @song do |f| %>
    <div class="form-group">
      <%= f.label :mood, "Mood" %>
      <%= f.input :mood,
            as: :text,
            label: false,
            input_html: {
              placeholder: "What mood should the song express?",
              rows: 2,
              class: "form-control"
            } %>
    </div>

    <div class="form-group">
      <%= f.label :genre, "Genre" %>
      <%= f.input :genre,
            as: :text,
            label: false,
            input_html: {
              placeholder: "What genre should the song be?",
              rows: 2,
              class: "form-control"
            } %>
    </div>

    <div class="form-group">
      <%= f.label :keywords, "Keywords" %>
      <%= f.input :keywords,
            as: :text,
            label: false,
            input_html: {
              placeholder: "Add your keywords here",
              rows: 2,
              class: "form-control"
            } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>
