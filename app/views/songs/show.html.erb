<h1 class="song-title text-3xl font-bold text-center mt-12"><%= @song.title %></h1>

<div class="lyric_box">
  <% @song.generated_lyrics.split("\n").each do |line| %>
    <p><%= line %></p>
  <% end %>
</div>

<div class="song-actions">
  <%= link_to "Edit", edit_song_path(@song), class: "btn btn-primary" %>
  <%= link_to "Share", share_song_path(@song), class: "btn btn-secondary" %>
  <%= link_to "Delete", song_path(@song),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "btn btn-danger" %>
</div>
