<div class="container mt-4" style="max-width: 720px;">
  <h1 class="mb-3">Share “<%= @song.title %>”</h1>
  <p class="text-muted mb-4">
    Send this song to a friend by email.
  </p>
  <%= form_with url: share_song_path(@song), method: :post, local: true do |f| %>
    <div class="mb-3">
      <%= label_tag :recipient_email, "Recipient Email" %>
      <%= email_field_tag :recipient_email, params[:recipient_email], class: "form-control", required: true, placeholder: "friend@example.com" %>
    </div>
    <div class="mb-3">
      <%= label_tag :note, "Message (optional)" %>
      <%= text_area_tag :note, params[:note], rows: 5, class: "form-control", placeholder: "Write a short note..." %>
    </div>
    <div class="d-flex gap-2">
      <%= submit_tag "Share", class: "btn btn-primary" %>
      <%= link_to "Cancel", songs_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
