<div class="container mt-4">
  <h1 class="text-center mb-4">Songs</h1>
  <div class="text-center mb-3">
    <%= link_to "Create a Song", new_song_path, class: "btn btn-primary" %>
  </div>
  <% if @songs.any? %>
    <ul class="list-group mb-4" data-controller="share">
      <% @songs.each do |song| %>
        <li class="list-group-item d-flex align-items-center justify-content-between">
            <span><%= song.title %></span>
            <div class="d-flex gap-3">
              <%= link_to "Edit", edit_song_path(song) %>
              <%= link_to "Delete", song_path(song), { data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?" }} %>
              <button data-action="click-> share#share" data-song-id="<%= song.id %>" data-title="<%= song.title %>">Share</button>
            </div>
        </li>
      <% end %>
    </ul>

  <% else %>
    <div class="alert alert-secondary text-center">
      No songs yet.
    </div>
  <% end %>
</div>
