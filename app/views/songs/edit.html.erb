<div class="container mt-5 d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="text-center mb-4 title-banner">Edit Song</h1>
    <%= form_with model: @song, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :generated_lyrics, "Lyrics" %>
        <%= form.text_area :generated_lyrics, rows: 12, class: "form-control" %>
      </div>
      <div class="d-flex justify-content-between icon-button-wrapper">
        <%= form.submit "Save", class: "icon-button icon-button-save" %>
        <%= link_to "Back", song_path(@song), class: "btn btn-secondary" %>
      </div>
    <% end %>
  <ul class="chat">
  <% @song.messages.each do |message| %>
    <% unless message.role == 'system' %>
      <li class="chat-bubble <%= message.role %>">
        <%= message.content %>
      </li>
    <% end %>
  <% end %>
</ul>


<%= simple_form_for([@song, @message]) do |f| %>
    <%= f.input :content %>
    <%= f.submit %>
<% end %>
  </div>
</div>
