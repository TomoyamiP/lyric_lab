<div class="neo-hero">
  <div class="grain"></div>
  <div class="grid"></div>
  <div class="container mt-5 d-flex justify-content-center pt-4 pb-5">
    <div class="col-md-8 col-lg-6" style="margin-top: 32px">
      <h1 class="text-center mb-4 title-banner">Edit Song</h1>
      <div class="glass p-4 rounded">
        <%= form_with model: @song, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label fw-bold" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :generated_lyrics, "Lyrics" %>
            <%= form.text_area :generated_lyrics, rows: 12, class: "form-control" %>
          </div>
          <div class="d-flex justify-content-between align-items-center mt-3 button-row">
            <%= form.submit "Save", class: "btn btn-success" %>

            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#lyriBot">
              <span class="lyribott"></span>
            </button>

            <%= link_to "Back", song_path(@song), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>

      <%# <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#lyriBot"> %>
      <%# </button> %>

      <div class="modal fade" id="lyriBot" tabindex="-1" aria-labelledby="lyriBotLabel"  aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="lyriBotLabel">LyriBot</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= render "messages/messages", messages: @messages %>
            </div>
            <div class="modal-footer align-items-stretch">
              <%= render "messages/form", song: @song, message: @message %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
