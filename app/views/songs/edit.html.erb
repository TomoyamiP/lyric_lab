<div class="neo-hero">
  <div class="grain"></div>
  <div class="grid"></div>
  <div class="container mt-5 d-flex justify-content-center pt-4 pb-5">
    <div class="col-md-8 col-lg-6">
      <h1 class="text-center mb-4 title-banner">Edit Song</h1>
      <div class="glass p-4 rounded">
        <%= form_with model: @song, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label fw-bold" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :generated_lyrics, "Lyrics", class: "form-label fw-bold" %>
            <%= form.text_area :generated_lyrics, rows: 12, class: "form-control" %>
          </div>
          <div class="d-flex justify-content-between">
            <%= form.submit "Save", class: "btn btn-flat btn-primary" %>
            <%= link_to "Back", song_path(@song), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
