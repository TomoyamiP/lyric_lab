<div class="neo-hero">
  <div class="grain"></div>
  <div class="grid"></div>

 <div class="safe-pad">
  <div class="container d-flex justify-content-center pt-4 pb-5">
    <div class="col-md-8 col-lg-6">

      <h1 class="text-center mb-4 title-banner">Edit Song</h1>
      <div class="glass p-4 rounded">
        <%= form_with model: @song, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label fw-bold" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :generated_lyrics, "Lyrics" %>
            <%= form.text_area :generated_lyrics, rows: 12, class: "form-control" %>
          </div>
          <div class="d-flex justify-content-center mt-4 w-100" style="gap: 3rem; margin-bottom: 1.5rem;">
            <div class="icon-button-wrapper">
              <button type="submit" class="icon-button icon-button-save">
                <i class="fa-solid fa-floppy-disk"></i>
              </button>
              <div class="label">Save</div>
            </div>
            <div class="icon-button-wrapper">
              <button type="button" class="icon-button icon-button-lyribot"
                      data-bs-toggle="modal" data-bs-target="#lyriBot">
                <i class="fa-solid fa-robot"></i>
              </button>
              <div class="label">LyriBot</div>
            </div>
            <div class="icon-button-wrapper">
              <%= link_to song_path(@song), class: "icon-button icon-button-back" do %>
                <i class="fa-solid fa-rotate-left"></i>
              <% end %>
              <div class="label">Back</div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal fade" id="lyriBot" tabindex="-1" aria-labelledby="lyriBotLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content modal-glass border-0">
            <div class="modal-header">
              <h5 class="modal-title mb-0 d-flex" id="lyriBotLabel">
                <span class="lyribot mb-0 me-2"></span>LyriBot
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-0">
              <div class="chat-wrap"  data-controller="auto-scroll">
                <%= render "messages/messages", messages: @messages %>
              </div>
            </div>

            <div class="modal-footer border-0 w-100">
              <div class="w-100">
                <%= render "messages/form", song: @song, message: @message %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
